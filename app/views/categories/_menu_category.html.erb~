			<%if Category.find(p.to_i).sub_category != nil%>
					<% @i += 1 %>
				<% rec p.to_i %>
					<% @i -= 1 %>
			<%else%>
				<%= link_to 'Удалить', Category.find(p.to_i), method: :delete, data: { confirm: 'Are you sure?' } %></li>
