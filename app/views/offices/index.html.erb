<div class="page-header">
<h1 style="font-family:Geneva;">Наши контакты</h1>
</div>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false&language=ru"></script>
<style>
	#gmap_canvas img{
		max-width:none!important;background:none!important
	}
textarea{
  width: 400px;
  height: 200px;
}
</style>
<script type="text/javascript"> 
	google.maps.event.addDomListener(window, 'load', init_map);
</script>

<% if current_admin %>
	<%= link_to 'Новый офис', new_office_path %>
<% end %>
<div class="row">
	<div class="span6">
	 <% @offices.each do |office| %>
      	 	<div class="panel panel-default">
				<div class="panel-body"  style="font-family:Geneva;">
				<h1><%= office.title %></h1>
					
						<h4>Контакты</h4>
						<%= office.numbers.html_safe if office.numbers %>
						<h4>Адрес</h4>
						<%= office.address %>

				</div>
				<%if current_admin %>
				<div class="panel-footer clearfix">
						<div class="pull-right">
						<table>
							<tr>
							<td colspan="2">  		
								<%= link_to "Изменить", edit_office_path(office.id) %>
								<%= link_to "Удалить", office, method: :delete %>
							</td></tr>
							</table>
						</div>
				</div>
				<% end %>
		</div>
   	 <% end %>		
	</div>
	<div class="span6">
		<div id="gmap_canvas" style="height:500px;width:500px;"></div><br>
		<p><button class="btn btn-default btn-lg" data-toggle="modal" data-target="#cmail" >
			Обратная связь
		</button></p>

<div class="modal fade" id="cmail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" hidden="true">
  <div class="modal-dialog text-left">
    <div class="modal-content">
      <div class="modal-header">

        <h2 class="modal-title" id="myModalLabel">Напишите нам</h2>
      </div>
      <div class="modal-body">
		<form action="mail.php">
      		<label>Имя:</label>
			<input type="text" name="uname"/>
		<label>Сообщение:</label>
			<textarea name="content"></textarea>
		<p><input type="submit" value="Отправить"/>
	</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
      </div>
    </div>
  </div>
</div>
		
