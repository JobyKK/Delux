<%= form_for(@offer, multipart: true) do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title%>
  </div>
  <!-- <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div> -->
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
 <div class="field">

    <%= f.label :Short %>
    <%= f.bootsy_area :short_description %>
  </div> 
  <div class="field">
    <%= f.label :Full %>
    <%= f.bootsy_area :description %>
  </div>       
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
