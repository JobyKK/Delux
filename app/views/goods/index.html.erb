<script type="application/javascript;version=1.7"></script>
<div class="row" >
	<div class="span3" >
		<%= render 'menu_goods' %>
		<%if current_admin%>
			<h1 style="color:aaa;"><%= link_to 'BIG RED BUTTON', categories_path %></h1>
			<br><%= link_to 'New support good', new_support_good_path %>
		<%end%>
	</div>
	<div class="span9" >
		<p><b>Введите название товара:</b><br>
			<div class="form-search">
				<input type="text" size="40" id="search">
				<button onclick="searchs()">Найти</button>
			</div>
		</p>
		<div class="row">
			<%if current_admin%><form accept-charset="UTF-8" action="/goods/new" method="GET" id="Add"><%end%>
				<div class="span4" id="checkBox" class="animated fadeIn">
				<!-- Тут хватаем js инфу из чекбоксов производителей и перезаписываем сюда новые js-->
				</div>

				<div class="span5" id="subMenu" class="animated fadeIn" name="none">
				<!-- Тут хватаем запускаем js подменю-->			
				</div>
				<input type="hidden" id="last_check" name=<%if @last_check %><%="yes"%><%else%><%="no"%><%end%>></input>
			<%if current_admin%></form><%end%>
		</div>
		<div id="goods">
			<%i = 0%>
			<table align="center" class="animated fadeIn">
			<% Category.all.each do |r| %>
				<%if r.super_category == ""%>
						<%if i % 2 == 0 %>
						<tr>
					<%end%>
					<td>
						<a onclick=<%='MyOnClick("'+r.id.to_s+'")'%> style="font-size:12pt"><%= r.title%></a></div>					</td>
					<%if i % 2 != 0 %>
						<tr/>
					<%end%>	
					<%i += 1%>
				<%end%>
			<%end%>
			</table>
		</div>
	</div>
</div>
