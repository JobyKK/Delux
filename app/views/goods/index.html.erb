<style>
  .category_img img{
	width: 300px;
	height: 300px;
	background: white;
  }
  .good_img img{
	width: 200px;
	height: 200px;
	background: white;
}
 
  }

</style>
<div class="page-header">
	<h1 style="font-family:Geneva;">Наш интернет-магазин</h1>
</div>
<script type="application/javascript;"></script>

<div class="row" >
	<div class="span3">
		<p><b>Введите название товара:</b><br>
			<div class="form-search">
				<input type="text" size="40" style="height:24px" id="search">
				<button onclick="searchs()">Найти</button>
			</div>
		</p>
		<%= render 'menu_goods' %>
		<%if current_admin%>
			<h1 style="color:aaa;"><%= link_to 'Изменение категорий', categories_path %></h1>
			<br><%= link_to 'Новый сопутствующий товар', new_support_good_path %><!--need add to good-->
		<%end%>
	</div>
	<div class="span9" id="menuFrame">
		<div class="row" id="menuRow">
			<%if current_admin%>
				<form accept-charset="UTF-8" action="/goods/new" method="GET" id="Add">
			<%end%>
				<div class="span3 offset1" id="checkBox" class="animated fadeIn">
				</div>
				<div class="span4" id="subMenu" class="animated fadeIn" name="none">
				</div>
			<%if current_admin%>
				</form>
			<%end%>
		</div>
	<div id="goods">
		<div class="panel panel-default">
		<div class="panel-body text-center">
		<div class="row-fluid">
				<%i = 0%>
				<% Category.all.each do |r| %>
					<%if r.super_category == ""%>
						<%if i % 2 == 0 %>
							<div class="span5 offset1 text-center">
						<% else %>
							<div class="span5 text-center">
						<%end%>	
							<a onclick=<%='MyOnClick("'+r.id.to_s+'")'%> style="font-size:12pt">
							<div class="category_img">
							    <%= image_tag(r.avatar.url) %>
							</div>
							<h4><%= r.title%></h4></a>
						</div>					
				<%i += 1%>
					<%end%>
				<%end%>
		</div>
		</div>
		</div>
	</div>
	</div>
</div>
